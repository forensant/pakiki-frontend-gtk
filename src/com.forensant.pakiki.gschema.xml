<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/com/forensant/pakiki/" id="com.forensant.pakiki">
        <key name="request-double-click" type="s">
            <choices>
                <choice value="new-window"/>
                <choice value="inject"/>
                <choice value="new-request"/>
            </choices>
            <default>'new-window'</default>
            <summary>Request Double-click</summary>
            <description>The action to take when a request is double-clicked.</description>
        </key>
        <key name="colour-scheme" type="s">
            <default>'tango'</default>
            <summary>Text preview colour scheme</summary>
            <description>The colour scheme to use when rendering requests.</description>
        </key>
        <key name="manual-instructions-expanded" type="b">
            <default>false</default>
            <summary>Manual Instructions</summary>
            <description>Whether the manual instructions for proxy install are collapsed.</description>
        </key>
        <key name="grid-columns" type="s">
            <default>'Protocol:0;Time:1;URL:1;Size:1;Content Type: 0;Duration:1;Verb:1;Status:1;Error:1;Notes:1'</default>
            <summary>Grid column configuration</summary>
            <description>The settings for the request grids.</description>
        </key>
        <key name="scan-grid-columns" type="s">
            <default>'Protocol:0;Time:1;URL:1;Size:1;Content Type: 0;Duration:1;Verb:1;Status:1;Payloads:1;Error:1;Notes:1'</default>
            <summary>Grid column configuration for scans</summary>
            <description>The settings for the request grids for scans.</description>
        </key>
    </schema>
</schemalist>

<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="PakikiPlaceholderRequests" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkLabel">
        <property name="vexpand">1</property>
        <property name="label" translatable="1">
</property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="margin-start">18</property>
        <property name="margin-end">18</property>
        <property name="margin-top">18</property>
        <property name="margin-bottom">18</property>
        <property name="hexpand">1</property>
        <property name="vexpand">1</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel">
            <property name="margin-start">100</property>
            <property name="hexpand">1</property>
          </object>
        </child>
        <child>
          <object class="GtkGrid">
            <property name="halign">center</property>
            <child>
              <object class="GtkLabel">
                <property name="margin-end">12</property>
                <property name="margin-bottom">12</property>
                <property name="label" translatable="1">Welcome</property>
                <property name="justify">right</property>
                <property name="single-line-mode">1</property>
                <property name="xalign">0</property>
                <attributes>
                  <attribute name="weight" value="bold"></attribute>
                  <attribute name="scale" value="2"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="margin-end">12</property>
                <property name="margin-bottom">6</property>
                <property name="label" translatable="1">Grab yourself a coffee and let&apos;s start listening for traffic.</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="1">Once traffic has been received, it will be shown here.</property>
                <property name="xalign">0</property>
                <attributes>
                  <attribute name="style" value="italic"></attribute>
                </attributes>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkImage" id="image_laptop">
                <property name="margin-start">24</property>
                <property name="halign">start</property>
                <property name="valign">center</property>
                <property name="resource">/com/forensant/pakiki/HappyLaptop.svg</property>
                <property name="height-request">128</property>
                <property name="width-request">128</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                  <property name="row-span">5</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkFrame" id="frame_error">
                <property name="visible">0</property>
                <property name="margin-top">16</property>
                <child>
                  <object class="GtkLabel" id="label_error">
                    <property name="label" translatable="1">An error occurred: XYZ</property>
                    <property name="use-markup">1</property>
                    <property name="justify">fill</property>
                    <property name="wrap">1</property>
                    <property name="xalign">0</property>
                    <property name="margin-start">5</property>
                    <property name="margin-end">5</property>
                    <property name="margin-top">5</property>
                    <property name="margin-bottom">5</property>
                  </object>
                </child>
                <child type="label_item">
                  <placeholder/>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">3</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <child>        
                  <object class="GtkButton" id="button_launch_browser">
                    <property name="label" translatable="1">Launch _Browser</property>
                    <property name="focusable">1</property>
                    <property name="receives-default">1</property>
                    <property name="margin-top">24</property>
                    <property name="use-underline">1</property>
                    <signal name="clicked" handler="on_button_launch_browser_clicked" swapped="no"/>
                  </object>
                </child>
                <child>
                  <placeholder/>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">4</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkExpander" id="expander_manual_instructions">
                <property name="focusable">1</property>
                <property name="margin-top">25</property>
                <signal name="activate" handler="on_expander_manual_instructions_activate" swapped="no"/>
                <child>
                  <object class="GtkFrame">
                    <property name="margin-top">12</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel" id="label_title_certificate">
                            <property name="label" translatable="1">1. Install certificate</property>
                            <property name="xalign">0</property>
                            <attributes>
                              <attribute name="weight" value="bold"></attribute>
                            </attributes>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="label_certificate">
                            <property name="label" translatable="1">In order to intercept TLS traffic, you&apos;ll need to install the root certificate into your browser or operating system.
If you&apos;re unsure how to do it, consult your browser&apos;s documentation, or search online for the latest instructions.</property>
                            <property name="justify">fill</property>
                            <property name="wrap">1</property>
                            <property name="xalign">0</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <child>
                              <object class="GtkButton" id="button_certificate_save">
                                <property name="label" translatable="1">Save Certificate</property>
                                <property name="focusable">1</property>
                                <property name="receives-default">1</property>
                                <property name="margin-top">12</property>
                                <signal name="clicked" handler="on_button_certificate_save_clicked" swapped="no"/>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="hexpand">1</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="label_title_proxy">
                            <property name="margin-top">24</property>
                            <property name="label" translatable="1">2. Set your proxy</property>
                            <property name="xalign">0</property>
                            <attributes>
                              <attribute name="weight" value="bold"></attribute>
                            </attributes>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="label_setup_proxy">
                            <property name="focusable">1</property>
                            <property name="label" translatable="1">Pākiki Proxy is listening for traffic on &lt;a href=&quot;PROXYADDRESS&quot;&gt;PROXYADDRESS&lt;/a&gt;.
You&apos;ll need to configure your browser to use Pākiki as an upstream proxy.</property>
                            <property name="use-markup">1</property>
                            <property name="justify">fill</property>
                            <property name="wrap">1</property>
                            <property name="xalign">0</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <child>
                              <object class="GtkButton" id="btn_launch_documentation">
                                <property name="label" translatable="1">_Documentation</property>
                                <property name="focusable">1</property>
                                <property name="receives-default">1</property>
                                <property name="margin-top">12</property>
                                <property name="use-underline">1</property>
                                <signal name="clicked" handler="on_btn_launch_documentation_clicked" swapped="no"/>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="margin-end">20</property>
                                <property name="label" translatable="1">
</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                    <child type="label_item">
                      <placeholder/>
                    </child>
                  </object>
                </child>
                <child type="label">
                  <object class="GtkLabel">
                    <property name="label" translatable="1">Manual setup instructions</property>
                    <attributes>
                      <attribute name="weight" value="bold"></attribute>
                    </attributes>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">7</property>
                  <property name="column-span">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="box_chromium_not_found">
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="1">On Kali it can be installed with:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="margin-start">6</property>
                    <property name="label" translatable="1">sudo apt install chromium</property>
                    <property name="selectable">1</property>
                    <attributes>
                      <attribute name="font-desc" value="Monospace 10"></attribute>
                    </attributes>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="row">6</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="label_chromium_not_found">
                <property name="margin-top">12</property>
                <property name="label" translatable="1">If Chromium is installed, it can be used to automatically launch a browser session preconfigured to use the proxy.</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">5</property>
                  <property name="column-span">2</property>
                </layout>
              </object>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="margin-end">100</property>
            <property name="hexpand">1</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="vexpand">1</property>
      </object>
    </child>
  </template>
</interface>
